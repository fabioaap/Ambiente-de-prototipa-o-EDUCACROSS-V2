    {
      "pattern": "^\\.\\./.*",
      "comment": "Ignore relative links going up directories (often flaky in CI)"
    },
    {
      "pattern": "^\\./.*",
      "comment": "Ignore local relative links (temporarily to unblock CI)"
    },
    {
      "pattern": "^/.*",
      "comment": "Ignore absolute path links (often flaky in CI)"
    }
