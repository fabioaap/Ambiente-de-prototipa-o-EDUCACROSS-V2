    },
    {
      "pattern": "^https?://www\\.researchgate\\.net",
      "comment": "Ignore ResearchGate (blocks bots)"
    },
    {
      "pattern": "^https?://www\\.npmjs\\.com",
      "comment": "Ignore NPM (blocks bots)"
    },
    {
      "pattern": "^https?://docs\\.github\\.com",
      "comment": "Ignore GitHub Docs"
    },
    {
      "pattern": "^https?://storybook\\.js\\.org",
      "comment": "Ignore Storybook Docs"
    },
    {
      "pattern": "^https?://nextjs\\.org",
      "comment": "Ignore Next.js Docs"
    },
    {
      "pattern": "^https?://github\\.com/fabioaap",
