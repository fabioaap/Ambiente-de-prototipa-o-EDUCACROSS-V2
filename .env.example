# Environment Variables - Sprint 6
# Copy this file to .env.local and fill in the values

# ============================================================
# Sentry (US2.2 - Monitoring)
# ============================================================

# Sentry DSN for error tracking
# Get from: https://sentry.io -> Project Settings -> Client Keys (DSN)
NEXT_PUBLIC_SENTRY_DSN=https://your-key@sentry.io/your-project-id

# Optional: Sentry release version for tracking
SENTRY_RELEASE=1.0.0

# Optional: Sentry auth token for source maps upload
# Get from: https://sentry.io -> Account Settings -> Auth Tokens
SENTRY_AUTH_TOKEN=your-auth-token

# ============================================================
# Analytics (US2.3 - Analytics)
# ============================================================

# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA4_ID=G-XXXXXXXXXX

# Or Mixpanel Project Token
NEXT_PUBLIC_MIXPANEL_TOKEN=your-token

# ============================================================
# Development
# ============================================================

# Node environment
NODE_ENV=development

# Base URL for API calls and E2E tests
BASE_URL=http://localhost:3000

# ============================================================
# Database (when implemented)
# ============================================================

# DATABASE_URL=postgresql://user:password@localhost:5432/educacross

# ============================================================
# API Keys (when integrated with external services)
# ============================================================

# EXTERNAL_API_KEY=your-key
